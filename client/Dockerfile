FROM node:16-alpine as builder

ARG REACT_APP_GOOGLE_MAP_API_KEY
ARG REACT_APP_EMAIL_SERVICE_ID
ARG REACT_APP_EMAIL_TEMPLATE_ID
ARG REACT_APP_EMAIL_PUBLIC_KEY
ENV REACT_APP_GOOGLE_MAP_API_KEY=$REACT_APP_GOOGLE_MAP_API_KEY
ENV REACT_APP_EMAIL_SERVICE_ID=$REACT_APP_EMAIL_SERVICE_ID
ENV REACT_APP_EMAIL_TEMPLATE_ID=$REACT_APP_EMAIL_TEMPLATE_ID
ENV REACT_APP_EMAIL_PUBLIC_KEY=$REACT_APP_EMAIL_PUBLIC_KEY

WORKDIR '/app'
COPY package.json .
RUN npm install
COPY . .
RUN npm run build

FROM nginx
COPY --from=builder /app/build /usr/share/nginx/html